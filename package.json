{
  "name": "myicon",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "license": "MIT",
  "scripts": {
    "dev:docs": "yarn workspace @myicon/docs dev",
    "build:svgs": "yarn workspace @myicon/svgs build && yarn lerna:link",
